<section>
    {{#if user}}
    <p class="text-center fs-2 py-3">Hi, {{user.first_name}}. Welcome to Nike store</p>
    {{else}}
    <h1 class="text-center py-5">Welcome to Nike store</h1>
    {{/if}}
    <div class="container">
    <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-between">
                <li class="page-item">
                    <a class="page-link text-dark" href="{{result.prevLink}}">Previous</a>
                </li>
                <li class="page-item">
                    <a class="page-link text-dark" href="{{result.nextLink}}">Next</a>
                </li>
            </ul>
        </nav>
        <div class="row justify-content-around">
            {{#each result.docs}}
            <div class="col-4 my-1">
                <div class="card" style="height: 400px; width:340px;">
                    <a href="/api/products/{{this._id}}" style="text-decoration: none;">
                        <img src={{this.thumbnail}} class="card-img-top" alt={{this.title}}
                            style="height: 280px; width: 340px;">
                        <div class="card-body mx-3">
                            <p class="card-text fs-6 fw-bold text-dark">{{this.title}}</p>
                            <p class="card-text fw-semibold fs-6 text-dark">price: ${{this.price}}</p>
                        </div>
                    </a>
                </div>
            </div>
            {{/each}}
        </div>
        
    </div>

</section>